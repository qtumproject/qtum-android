<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_text_color</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/accent_red_color</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    
    <style name="InputText" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="InputTextLight" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/bottom_nav_bar_text_color_light_alpha_60</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/bottom_nav_bar_text_color_light_alpha_60</item>
        <item name="colorPrimary">@color/bottom_nav_bar_text_color_light_alpha_60</item>
        <item name="colorPrimaryDark">@color/bottom_nav_bar_text_color_light</item>
        <item name="colorAccent">@color/switch_on</item>
        <item name="colorControlActivated">@color/switch_on</item>
        <item name="colorControlHighlight">@color/switch_on</item>
    </style>

    <style name="InputTextWhite" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="InputTextParameter" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/bottom_nav_bar_text_color_light_alpha_50</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/bottom_nav_bar_text_color_light_alpha_50</item>
        <item name="colorPrimary">@color/bottom_nav_bar_text_color_light_alpha_50</item>
        <item name="colorPrimaryDark">@color/bottom_nav_bar_text_color_light_alpha_50</item>
        <item name="colorAccent">@color/bottom_nav_bar_text_color_light_alpha_50</item>
        <item name="colorControlActivated">@color/bottom_nav_bar_text_color_light_alpha_50</item>
        <item name="colorControlHighlight">@color/bottom_nav_bar_text_color_light_alpha_50</item>
    </style>

    <style name="oneline_textview">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="qstore_text_title_style" parent="oneline_textview">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="qstore_text_subtitle_style" parent="oneline_textview">
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">.6</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="qstore_text_oneline_title_style" parent="oneline_textview">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="qstore_text_oneline_subtitle_style" parent="oneline_textview">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:alpha">.6</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="confirm_purchase_title_dialog" parent="oneline_textview">

        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="confirm_purchase_subtitle_dialog" parent="oneline_textview">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!--WHITE THEME-->

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/title_color_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="appbar_wallet_alpha_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">.4</item>
    </style>

    <style name="appbar_wallet_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--WHITE THEME-->

</resources>
