<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <com.pixelplex.qtum.utils.FontTextView
        android:id="@+id/name"
        android:text="Name"
        android:textColor="@color/bottom_nav_bar_text_color_light"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:ellipsize="end"
        app:typefaceAsset="@string/proximaNovaRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.pixelplex.qtum.utils.FontTextView
        android:id="@+id/value"
        android:text="value"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="@color/bottom_nav_bar_text_color_light"
        android:maxLines="1"
        android:textSize="16sp"
        android:gravity="right"
        android:layout_marginEnd="16dp"
        app:typefaceAsset="@string/proximaNovaSemibold"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/color_primary_divider_light"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>